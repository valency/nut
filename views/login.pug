html
    head
        include lib.pug
        link(rel='stylesheet', type='text/css', href='css/login.css')
        script(type='text/javascript', src='js/login.js')
    body
        .page-content
            include header
            .wrapper
                h3.center
                    i.fa.fa-spin.fa-spinner
            .container-fluid.main-content.hidden
                #banner.page-header
                    .row
                        .col-lg-12.form-group
                            input#username.form-control(placeholder='用户名')
                        .col-lg-12.form-group
                            input#password.form-control(type='password',placeholder='密码')
                        .col-lg-12.form-group
                            a.btn.btn-primary.form-control(href='javascript:login()') 登录
            include footer

